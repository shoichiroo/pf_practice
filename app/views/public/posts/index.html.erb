<div class="d-flex justify-content-center mb-2">
  <%= render 'public/searches/form' %>
</div>

<div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% @posts.each do |post| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <%= image_tag post.get_image(50, 50) %>
            <div class="card-body">
              <!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->
              <p class="card-text"><%= post.body %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <!-- <button type="button" class="btn btn-sm btn-outline-secondary">View</button> -->
                  <%= link_to "見る", public_post_path(post), class: "btn btn-sm btn-outline-secondary" %>
                  <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
                  <%= link_to "編集", edit_public_post_path(post), class: "btn btn-sm btn-outline-secondary" %>
                </div>
                <!-- <small class="text-muted">9 mins</small> -->
                <small class="text-muted">9分</small>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>