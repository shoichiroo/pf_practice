<h3>search for "<%= @content %>"</h3>
	<table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>title</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= image_tag post.get_image(40, 40) %></td>
          <td><%= link_to post.title, public_post_path(post) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>